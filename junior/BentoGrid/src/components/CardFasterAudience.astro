---
import Card from "./Card.astro";
import fasterAudienceImg from '../assets/images/illustration-audience-growth.webp'
---

<Card bg="bg-brand-white" pTop="pt-brand-300" pBottom="pb-brand-300" pLeft="pl-brand-300" pRight="pr-brand-300" gridArea="card-faster-audience">
    <article class="flex flex-col gap-brand-300 md:flex-row md:gap-0 md:items-center md:justify-between lg:flex-col lg:items-start lg:gap-[38px]">
        <div class="flex flex-col gap-[15px]">
            <h1 class="text-[46px]/[42px] md:text-[54px]/[48px] tracking-[-4%] font-medium"> >56%</h1>
            <h2 class="text-[18px]/[20px] tracking-[0px] font-normal">faster audience growth</h2>
        </div>

        <img src={fasterAudienceImg.src} alt="Multiple Accounts" class="w-6/12 md:w-3/12 lg:w-12/12">
    </article>
</Card>